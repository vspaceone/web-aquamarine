---
import { Image } from "astro:assets";

interface Props {
	title: string;
	description?: string;
	imageSrc?: string;
}

const { title, description, imageSrc } = Astro.props;
---

<div class="flex max-md:flex-col border-2 h-96 p-2 rounded-xl gap-4 bg-white">
	<div class="md:w-1/2">
		<h3 class="text-2xl font-bold">{title}</h3>
		{description && <p class="text-gray-500">{description}</p>}
	</div>
	{
		imageSrc && (
			<div class="rounded-xl overflow-hidden h-fit md:w-1/2">
				<Image
					itemprop="image"
					width={3448}
					height={4592}
					src={imageSrc}
					alt={title}
					class="overflow-hidden object-contain"
				/>
			</div>
		)
	}
</div>
